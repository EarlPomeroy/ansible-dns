$ORIGIN .
$TTL 604800     ; 1 week
home.lan        IN      SOA     ns.home.lan.    root.home.lan. (
                                2022040101      ; serial
                                604800          ; refresh (1 week)
                                86400           ; retry (1 day)
                                2419200         ; expire (4 weeks)
                                604800          ; minimum (1 week)
                                )
; name servers
                IN      NS      ns.home.lan.

$ORIGIN home.lan.
